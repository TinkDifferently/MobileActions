<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Vtb suite">
    <parameter name="device" value="SAMSUNG_A52"/>
    <parameter name="app" value="vtb-mobile-app"/>
    <test name="Эмоджи" verbose="1">
        <classes>
            <class name="ru.vtb.app.chat.tests.EmojiTest"/>
        </classes>
    </test>
    <test name="Соединение">
        <classes>
            <class name="ru.vtb.app.chat.tests.ConnectionTest"/>
        </classes>
    </test>
    <test name="Поддержка текста">
        <classes>
            <class name="ru.vtb.app.chat.tests.TextSupport"/>
        </classes>
    </test>
    <test name="Восстановление истории после сворачивания приложенияы">
        <classes>
            <class name="ru.vtb.app.chat.tests.BackgroundTest"/>
        </classes>
    </test>
    <test name="Поддержка изображений">
        <classes>
            <class name="ru.vtb.app.chat.tests.ImagesTest"/>
        </classes>
    </test>
    <test name="Быстрые кнопки">
        <classes>
            <class name="ru.vtb.app.chat.tests.FastButtonsTest_Hi"/>
            <class name="ru.vtb.app.chat.tests.FastButtonsTest_Any"/>
            <class name="ru.vtb.app.chat.tests.FastButtonsTest_Text"/>
        </classes>
    </test>
</suite>